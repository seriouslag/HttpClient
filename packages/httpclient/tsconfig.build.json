{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "module": "ESNext",
    "moduleResolution": "Node10",
    "declaration": true,
    "composite": true,
    "target": "ESNext",
    "sourceMap": false,
    "declarationMap": false
  },
  "include": [
    "./src/**/*.ts"
  ],
  "exclude": [
    "./**/*.test.*",
    "node_modules/**/*",
    "src/examples/**/*",
    "dist/**/*"
  ]
}