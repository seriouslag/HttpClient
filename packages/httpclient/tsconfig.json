{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "target": "es5",
    "module": "CommonJS",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "noImplicitOverride": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": "src",
  },
  "include": [
    "./src/**/*.ts"
  ],
  "exclude": [
    "./**/*.test.*",
    "dist/**/*",
    "node_modules/**/*"
  ]
}
