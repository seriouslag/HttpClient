{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "incremental": true,
    "composite": true,
    "noEmit": false,
    "baseUrl": "src",
    "rootDir": "src",
    "outDir": "dist",
    "paths": {
      "@seriouslag/*": [
        "../../*"
      ]
    }
  },
  "include": [
    "./src/**/*.ts"
  ],
  "exclude": [
    "./**/*.test.*",
    "dist/**/*",
    "node_modules/**/*"
  ]
}